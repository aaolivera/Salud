<div class="col-12" data-bind="visible: Visible">
    <div class="card text-white bg-danger mb-3" style="width:100%">
        <div class="card-body">
            <div class="row" data-bind="visible: Cargando">
                <div class="col-3 offset-4">
                    <h3 class="card-title">
                        <span class="fa fa-2x fa-spinner"></span>
                        Cargando
                    </h3>
                </div>
            </div>
            <div class="row" data-bind="visible: !Cargando()">
                <nav class="navbar" style="padding-left: 0px;">
                    <form class="form-inline">
                        <input class="form-control mr-sm-2" type="search" placeholder="Buscar" aria-label="Search" data-bind="value: Filtro">
                        <button class="btn  my-2 my-sm-0 mr-sm-2" type="button" data-bind="click: Recargar">Buscar</button>
                        <button class="btn  my-2 my-sm-0 mr-sm-2" type="button" data-bind="click: MostrarCrear"><span class="fa fa-plus-circle"></span></button>
                        <button class="btn  my-2 my-sm-0" type="button" data-bind="click: Recargar"><span class="fa fa-retweet"></span></button>
                    </form>
                </nav>
                <table class="table table-hover table-sm ">
                    <thead>
                        <tr class="text-white bg-dark">
                            <th scope="col">#</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Direccion</th>
                            <th scope="col">Telefono</th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach: Lista">
                        <tr>
                            <th scope="row">
                                <button class="btn btn-icn fa fa-edit" type="button" data-bind="click: function (){$parent.MostrarEditar($data);}"></button>
                                <button class="btn btn-icn fa fa-trash" type="button" data-bind="click: function (){$parent.Borrar($data);}"></button>
                            </th>
                            <td data-bind="text: Nombre"></td>
                            <td data-bind="text: Direccion"></td>
                            <td data-bind="text: Telefono"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Html.Partial("~/Views/Empresa/CrearModificar.cshtml")